<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.company.project.dao.XcOperatLogMapper">
  <resultMap id="BaseResultMap" type="com.company.project.model.XcOperatLog">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="create_user_id" jdbcType="VARCHAR" property="createUserId" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    <result column="update_user_id" jdbcType="VARCHAR" property="updateUserId" />
    <result column="is_delete" jdbcType="BIT" property="isDelete" />
    <result column="version" jdbcType="INTEGER" property="version" />
    <result column="status" jdbcType="INTEGER" property="status" />
    <result column="operat_name" property="operatName" jdbcType="VARCHAR"></result>
    <result column="operat_function" property="operatFunction" jdbcType="VARCHAR" />
    <result column="operat_module" property="operatModule" jdbcType="VARCHAR" />
    <result column="operat_content" property="operatContent" jdbcType="VARCHAR" />
    <result column="operat_state" property="operatState" jdbcType="VARCHAR" />
    <result column="operat_ip" property="operatIp" jdbcType="VARCHAR" />
  </resultMap>

    <select id="list" resultType="com.company.project.model.XcOperatLog">
        select l.id as id,l.create_time as createTime,
                l.create_user_id as createUserId,l.update_time as updateTime,
                l.update_user_id as updateUserId,l.status as status,l.ip as ip,
                u.phone as phone
        from t_operat_log l inner join t_sys_user u on l.create_user_id = u.id
        where
        l.is_delete = 0
        and u.is_delete = 0
        <if test="phone != null and phone != ''">
            and u.phone LIKE concat(concat('%',#{phone}),'%')
        </if>
        <if test="status != null and status != ''">
            and status = #{status}
        </if>
    </select>

</mapper>